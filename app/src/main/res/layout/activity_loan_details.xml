<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_6dp"
    android:orientation="vertical"
    tools:context=".">
    <GridLayout
        android:id="@+id/gvLoanDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loan_detail_case_location"
            android:textAlignment="textEnd"
            android:layout_row="0"
            android:layout_column="0"/>

        <TextView
            android:id="@+id/tvLoanDetailCaseLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BHARATPUR"
            android:layout_row="0"
            android:layout_column="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sanctioned Amount :"
            android:textAlignment="textEnd"
            android:layout_row="3"
            android:layout_column="0"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FM Name :"
            android:textAlignment="textEnd"
            android:layout_row="1"
            android:layout_column="0"/>

        <TextView
            android:id="@+id/tvLoanDetailFmName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FM Name"
            android:layout_row="1"
            android:layout_column="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FI Code :"
            android:textAlignment="textEnd"
            android:layout_row="2"
            android:layout_column="0"/>

        <TextView
            android:id="@+id/tvLoanDetailFiCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FI Code"
            android:layout_row="2"
            android:layout_column="1"/>

        <TextView
            android:id="@+id/tvLoanDetailAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10000"
            android:layout_row="3"
            android:layout_column="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Period Of Loan :"
            android:textAlignment="textEnd"
            android:layout_row="4"
            android:layout_column="0"/>

        <TextView
            android:id="@+id/tvLoanDetailPeriod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12 Months"
            android:layout_row="4"
            android:layout_column="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Interest Rate :"
            android:textAlignment="textEnd"
            android:layout_row="5"
            android:layout_column="0"/>

        <TextView
            android:id="@+id/tvLoanDetailInterestRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10% p.a. Flat"
            android:layout_row="5"
            android:layout_column="1"/>
    </GridLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margin_6dp"
        android:layout_height="60dp"
        android:layout_gravity="top" android:gravity="top">

        <Button
            android:id="@+id/btnLoanDetailsDownloadDoc"
            android:padding="@dimen/margin_3dp"
            android:text="@string/loan_detail_download_doc"
            android:ems="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnLoanDetailsRequestDisbursement"
            android:padding="@dimen/margin_3dp"
            android:text="@string/loan_detail_request_disb"
            android:ems="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <ListView
        android:id="@+id/lvLoanDetails"
        android:layout_below="@+id/gvLoanDetail"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margin_6dp"
        android:layout_height="wrap_content">
    </ListView>

</LinearLayout>
