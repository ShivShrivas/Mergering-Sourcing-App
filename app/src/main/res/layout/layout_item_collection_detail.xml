<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/expandable_item_background"
    android:orientation="horizontal"
    android:maxHeight="@dimen/fab_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginStart="@dimen/fab_margin"
        android:layout_weight="85"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvCollectionParty"
            style="@style/SeilStyleLabelMedium"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvCollectionCase"
            style="@style/SeilStyleLabelSmall"
            android:layout_marginStart="@dimen/margin_3dp"
            android:layout_gravity="bottom|end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvCollectionAmount"
        style="@style/SeilStyleLabelMedium"
        android:gravity="end"
        android:layout_weight="15"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

</LinearLayout>