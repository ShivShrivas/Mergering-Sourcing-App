<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_3dp">

    <TextView
            android:id="@+id/layoutCustGurName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/e_sign_name"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="16sp"
            android:visibility="visible"/>

    <TextView
            android:id="@+id/layoutCustGurFather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/e_sign_father"
            android:layout_below="@+id/layoutCustGurName"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="14sp"
            android:visibility="visible"/>

    <TextView
            android:id="@+id/layoutCustGurAadharId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/aadhar_id"
            android:layout_below="@+id/layoutCustGurFather"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="14sp"
            android:visibility="invisible"/>

    <TextView
            android:id="@+id/layoutCustGurSignerAs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="14sp"
            android:visibility="visible"
            android:layout_above="@+id/layoutCustGurMobile" android:layout_alignParentEnd="true"
            android:text="@string/e_sign_as"/>

    <TextView
            android:id="@+id/layoutCustGurMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/applicant_mobile"
            android:layout_alignBottom="@+id/layoutCustGurAadharId"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_alignParentEnd="true"
            android:textSize="14sp"
            android:visibility="visible"/>

    <TextView
            android:id="@+id/layoutCustGurAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/applicant_address"
            android:layout_below="@+id/layoutCustGurMobile"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:textSize="14sp"
            android:visibility="visible"/>

</RelativeLayout>
