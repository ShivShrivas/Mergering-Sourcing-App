<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/tvItemLayoutName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="true"
        android:text="@string/applicant_name"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tvItemLayoutFather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvItemLayoutName"
        android:text="@string/applicant_father_spouse"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="16sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tvItemLayoutMobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvItemLayoutFather"
        android:text="@string/applicant_mobile"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="14sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tvItemLayoutExtra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvItemLayoutFather"
        android:layout_toEndOf="@+id/tvItemLayoutMobile"
        android:layout_toStartOf="@+id/tvItemLayoutAadhar"
        android:gravity="center_horizontal"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="14sp"
        android:layout_marginStart="@dimen/fab_margin"
        android:layout_marginEnd="@dimen/fab_margin" />

    <TextView
        android:id="@+id/tvItemLayoutAadhar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tvItemLayoutFather"
        android:text="@string/aadhar_id"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="16sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tvItemLayoutAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvItemLayoutMobile"
        android:text="@string/applicant_address"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="14sp"
        android:visibility="visible" />
</RelativeLayout>
