<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SeilStyleLabelSmall">
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
        <item name="android:textColor">@android:color/holo_red_light</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="SeilStyleLabelMedium">
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
        <item name="android:textColor">@android:color/holo_red_light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SeilStyleEditText">
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:textColor">@android:color/holo_red_light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SeilStyleLabelLarge">
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
        <!--item name="android:textColor">@android:color/holo_red_light</item-->
        <item name="android:textSize">18sp</item>
    </style>


    <style name="acSpinnerStyle" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">#2B2B2B</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="InputLabel" parent="TextAppearance.AppCompat.Caption">
        <item name="android:paddingBottom">@dimen/input_label_vertical_spacing</item>
        <item name="android:paddingLeft">@dimen/input_label_horizontal_spacing</item>
        <item name="android:paddingRight">@dimen/input_label_horizontal_spacing</item>
    </style>

</resources>
